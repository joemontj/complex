{
    "AWSEBDockerrunVersion": 1,
    "containerDefinition":[
    {
        "name": "client",
        "image": "jomonjames/multi-client",
        "hostname": "client",
        "essential": false,
	"memory": 128
    },
    {
        "name": "server",
        "image": "jomonjames/multi-server",
        "hostname": "api",
        "essential": false,
	"memory": 128
    },   
    {
        "name": "worker",
        "image": "jomonjames/multi-worker",
        "hostname": "worker",
        "essential": false,
	"memory": 128
    },
    {
        "name": "nginx",
        "image": "jomonjames/multi-nginx",
        "hostname": "nginx",
        "essential": true,
        "portMapping": [
            {
                "hostPort": 80,
                "containerPort": 80
            }
        ],
        "links": ["client","server"],
	"memory": 128
    }
    ]
}
